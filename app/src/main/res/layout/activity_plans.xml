<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.varundavidpulla.internet.plans">
    <ImageButton
        android:id="@+id/plan2"
        android:layout_width="120dp"
        android:layout_height="123dp"
        android:layout_weight="0.89"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/two"
        android:layout_marginStart="42dp"
        android:layout_below="@+id/imageView3"
        android:layout_toRightOf="@+id/plan1"
        android:layout_toEndOf="@+id/plan1"
        android:layout_marginLeft="42dp" />

    <ImageButton
        android:id="@+id/plan1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="35dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/one"
        android:layout_weight="0.56"
        android:layout_marginStart="36dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/plan4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/four"
        android:layout_alignTop="@+id/plan3"
        android:layout_alignStart="@+id/plan2"
        android:layout_marginStart="2dp" />

    <ImageButton
        android:id="@+id/plan3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/three"
        android:layout_below="@+id/plan2"
        android:layout_alignStart="@+id/plan1"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/plan4"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/plan1"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
